@model Ktrgk2.Models.HangHoa

@{
    ViewData["Title"] = "Chỉnh sửa hàng hóa";
}

<div class="container-fluid mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="mb-0">Chỉnh sửa hàng hóa</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 20%">Mã hàng hóa</th>
                            <th style="width: 30%">Tên hàng hóa</th>
                            <th style="width: 20%">Số lượng</th>
                            <th style="width: 30%">Ghi chú</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="text" name="maHangHoa" class="form-control" value="@Model.MaHangHoa"></td>
                            <td><input type="text" name="tenHangHoa" class="form-control" value="@Model.TenHangHoa"></td>
                            <td><input type="number" name="soLuong" class="form-control" value="@Model.SoLuong"></td>
                            <td><input type="text" name="ghiChu" class="form-control" value="@Model.GhiChu"></td>
                        </tr>
                    </tbody>
                </table>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 8px;
        border: none;
    }
    .card-header {
        background-color: #0d6efd;
        padding: 1rem;
        border-radius: 8px 8px 0 0;
    }
    .table {
        margin-bottom: 0;
    }
    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
        text-align: center;
        vertical-align: middle;
    }
    .table td {
        padding: 0.5rem;
    }
    .form-control {
        border: 1px solid #ced4da;
    }
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13,110,253,0.25);
    }
    .btn {
        padding: 0.5rem 1rem;
    }
    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    .btn-primary:hover {
        background-color: #0b5ed7;
        border-color: #0a58ca;
    }
</style>