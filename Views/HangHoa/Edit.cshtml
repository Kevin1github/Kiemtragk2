@model Ktrgk2.Models.HangHoa

@{
    ViewData["Title"] = "Chỉnh sửa ghi chú";
}

<h2>Chỉnh sửa ghi chú</h2>

<form method="post">
    <div class="form-group">
        <label>Mã hàng hóa:</label>
        <input type="text" class="form-control" value="@Model.MaHangHoa" readonly />
    </div>
    <div class="form-group">
        <label>Tên hàng hóa:</label>
        <input type="text" class="form-control" value="@Model.TenHangHoa" readonly />
    </div>
    <div class="form-group">
        <label>Ghi chú:</label>
        <textarea name="ghiChu" class="form-control">@Model.GhiChu</textarea>
    </div>
    <button type="submit" class="btn btn-success">Cập nhật</button>
</form>